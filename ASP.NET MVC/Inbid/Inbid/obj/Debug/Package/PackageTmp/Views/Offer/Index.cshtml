@model IEnumerable<tabela.Models.View_Offers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="../../Scripts/index.js" type="text/javascript"></script>

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div id="rOferty" > 
<table id="oferty">
  
   
    @foreach (var item in Model)
    {
        <tr id="row-@item.OfferId">
            
            <td>
            <div class="leftFloat">
             ID: @item.OfferId
            <br />                    
             Nazwa: @item.CompanyName
            </div>
            </td>
            <td>
            Cena aktualna:
            </td>
            <td id="value-@item.OfferId">
                 @item.CurrentPrice
                </td>
            <td>                
              Cena początkowa: @item.StartPrice
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.OfferId })
            </td>
           
        </tr>
    }

    
   
</table>
</div>

