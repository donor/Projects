

@model Inbid.Models.Offer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    $(function () {
        $(".datefield").datepicker();
    });
 </script>

<h2>Edit</h2>

