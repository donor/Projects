@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Offer</legend>

        <div class="editor-label">
            @Html.HiddenFor(model => model.OfferId)
        </div>
       
   <div class="editor-label">
            @Html.HiddenFor(model => model.AuctionId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.CurrentPrice)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.CurrentPrice)
            @Html.ValidationMessageFor(model => model.CurrentPrice)
        </div>

     

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Auction", "Index", new { auctionNumber=Model.AuctionId })
    @Html.ActionLink("Delete", "Delete", new {id=Model.OfferId })
</div>
