@model Inbid.Models.RegistrationBidderOrBidderViewModel

@{
    ViewBag.Title = "AddBidderOrBidderView";
}
  
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/Account.css")" rel="stylesheet" type="text/css" />
 
<h2>Register new Bidder or BidderView</h2>
  
<p>
    Passwords are required to be a minimum of 6 characters in length.
</p>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")

    @Html.Partial("_RegisterBidderOrBidderView")

     <p>
        <input type="submit" value="@Resources.Resources.Register" />
     </p>  
 
}
