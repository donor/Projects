@using Resources

<div class="pagination">
    @if (!Model.IsFirstPage)
    {
        <span class="page-link">
            @Html.ActionLink("<<", "CompanyAdmins", new { page = 1 })</span>
    }
    @if (Model.HasPreviousPage)
    {
        <span class="page-link">
            @Html.ActionLink(Resources.PagePrev, "CompanyAdmins", new { page = Model.PageNumber - 1 })</span>
    }
    @if (Model.HasNextPage)
    {
        <span class="page-link">
            @Html.ActionLink(Resources.PageNext, "CompanyAdmins", new { page = Model.PageNumber + 1 })</span>
    }
    @if (!Model.IsLastPage)
    {
        <span class="page-link">
            @Html.ActionLink(">>", "CompanyAdmins", new { page = Model.PageCount })</span>
    }
    <div class="info">        
        <i>@string.Format(Resources.PageOf, Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber, Model.PageCount)</i>
    </div>
</div>